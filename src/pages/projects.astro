---
import Layout from '../layouts/Layout.astro';
import ProjectPost from '../components/ProjectPost.astro';

const allProjects = Object.values(import.meta.glob('./projects/*.md', { eager: true }));
const pageTitle = "Projects";
---

<Layout pageTitle = {pageTitle}>
	<p>
		Hey chat tal here in projects
	</p>
	<ul>
      {allProjects.map((post: any) => <ProjectPost url={post.url} title={post.frontmatter.title} description = {post.frontmatter.description} tag={post.frontmatter.tag}/>)}
    </ul>
</Layout>